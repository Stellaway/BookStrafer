<Page x:Class="Cookbook.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls="using:Template10.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Cookbook.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:Cookbook.ViewModels"
      mc:Ignorable="d">

    <Page.DataContext>
        <vm:MainPageViewModel x:ConnectionId='2' x:Name="ViewModel" />
    </Page.DataContext>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Bookground.jpg"/>
        </Grid.Background>
        <Image Source="/Assets/Bookground.jpg" Opacity="0.7" Stretch="Fill"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" >
            <TextBlock x:ConnectionId='5' x:Name="txtHelloText" FontSize="55" Margin="25" HorizontalAlignment="Center" Foreground="AliceBlue"/>
            <TextBlock x:ConnectionId='6' x:Name="txtBeOurGuestText" FontSize="45" Margin="25" HorizontalAlignment="Center" Foreground="AliceBlue"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:ConnectionId='3' x:Name="txtSearch" Margin="10" HorizontalAlignment="Center"  Width="400"                             />
            <Button x:ConnectionId='4' x:Name="btnSearch" Content="Search" FontSize="20" Foreground="AliceBlue" Background="Black" Opacity=".7" Width ="100" Height="50" HorizontalAlignment="Center" Margin="10"                        />
        </StackPanel>
    </Grid>
</Page>


